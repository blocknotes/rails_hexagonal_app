<h1>Posts</h1>

<ul>
<% @posts.each do |post| %>
  <li>
    <span class="title"><%= post.title %></span> by <%= link_to post.author %><br/>
    <em><%= post.published_at ? '[published]' : '[NOT published]' %></em><br/>
    <%= link_to 'Show', post, class: 'button button-outline' %>
    <%= link_to 'Edit', edit_post_path(post), class: 'button button-outline' %>
    <%= button_to 'Publish', publish_post_path(post), method: :post, class: 'button button-outline' %>
    <%= button_to 'Destroy', post, data: { confirm: 'Are you sure?' }, method: :delete, class: 'button button-outline' %>
  </li>
<% end %>
</ul>

<hr/>

<%= link_to 'New post', new_post_path, class: 'button button-outline' %>
<%= link_to 'Export titles', export_posts_path(format: :csv), class: 'button button-outline' %>
